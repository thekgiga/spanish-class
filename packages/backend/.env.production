# ===========================================
# PRODUCTION ENVIRONMENT - Backend Configuration
# ===========================================
#
# This is for the live production environment on unlimited.rs
# Copy this file to .env on the production server
#
# SECURITY WARNING: Use strong, unique passwords and secrets!
#

# Database - Production Database on unlimited.rs
# IMPORTANT: Replace with your actual cPanel credentials
# Format: mysql://[CPANEL_USER]_[DB_USER]:[PASSWORD]@localhost:3306/[CPANEL_USER]_[DB_NAME]
DATABASE_URL="mysql://REPLACE_cpaneluser_prod_user:REPLACE_PROD_PASSWORD@localhost:3306/REPLACE_cpaneluser_spanish_prod"

# JWT Authentication - MUST be strong and unique!
# Generate with: openssl rand -base64 32
# NEVER use the same secret as dev!
JWT_SECRET="REPLACE_WITH_STRONG_PRODUCTION_SECRET_MIN_32_CHARS"
JWT_EXPIRES_IN="7d"

# Google Calendar API (Required for production if using calendar features)
# GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service@project.iam.gserviceaccount.com"
# GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Key\n-----END PRIVATE KEY-----"
# GOOGLE_CALENDAR_ID="primary"

# Email Service (Required for production)
# Get API key from https://resend.com
# RESEND_API_KEY="re_your_production_api_key"
# EMAIL_FROM="Spanish Class <noreply@yourdomain.com>"
# PROFESSOR_EMAIL="professor@yourdomain.com"

# Application URLs - Production Environment
FRONTEND_URL="https://yourdomain.com"
API_URL="https://yourdomain.com/api"

# Environment
NODE_ENV="production"
PORT=3001

# Production-specific settings
LOG_LEVEL="error"
