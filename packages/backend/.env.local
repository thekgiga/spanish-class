# ===========================================
# LOCAL ENVIRONMENT - Backend Configuration
# ===========================================
#
# This is for development on your local machine
# Copy this file to .env to activate local environment
#

# Database - Local MySQL
# Option 1: Docker MySQL
DATABASE_URL="mysql://spanish_local:localpass@localhost:3306/spanish_class_local"

# Option 2: Local MySQL installation
# DATABASE_URL="mysql://root:rootpass@localhost:3306/spanish_class_local"

# Option 3: XAMPP/MAMP
# DATABASE_URL="mysql://root:@localhost:3306/spanish_class_local"

# JWT Authentication - Use weak secret for local dev (it's okay!)
JWT_SECRET="local-development-secret-not-secure"
JWT_EXPIRES_IN="7d"

# Google Calendar API (Optional - can leave empty for local dev)
# GOOGLE_SERVICE_ACCOUNT_EMAIL=""
# GOOGLE_PRIVATE_KEY=""
# GOOGLE_CALENDAR_ID=""

# Email Service (Optional - can leave empty for local dev)
# RESEND_API_KEY=""
# EMAIL_FROM="Spanish Class <noreply@localhost>"
# PROFESSOR_EMAIL="professor@localhost"

# Application URLs - Local development
FRONTEND_URL="http://localhost:5173"
API_URL="http://localhost:3001"

# Environment
NODE_ENV="development"
PORT=3001
